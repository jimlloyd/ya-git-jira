{
  "name": "ya-git-jira",
  "description": "git extensions for Jira integration. Assumes bun is installed.",
  "version": "1.0.0",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "gitj" : "dist/bin/gitj.js",
    "git-jira" : "dist/bin/git-jira.js",
    "git-jira-start": "dist/bin/git-jira-start.js",
    "git-bump": "dist/bin/git-bump.js"
  },
  "scripts": {
    "preinstall": "bun build index.ts bin/gitj.ts bin/git-jira.ts bin/git-jira-start.ts bin/git-bump.ts --outdir dist"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "bun-types": "latest"
  },
  "directories": {
    "lib": "lib"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "minimist": "^1.2.8"
  },
  "main": "dist/start.js dist/bump.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimlloyd/ya-git-jira.git"
  },
  "keywords": [
    "git",
    "jira",
    "integration"
  ],
  "author": "jim.lloyd@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jimlloyd/ya-git-jira/issues"
  },
  "homepage": "https://github.com/jimlloyd/ya-git-jira#readme"
}
